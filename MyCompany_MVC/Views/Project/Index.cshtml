@{
    int i = 1;
}
@model List<Project>

<button class="btn btn-primary text-white  mb-3 me-4"><h6 class="text-white"><a class="text-white" asp-action="Add" asp-controller="Project"> Add project</a></h6> </button>


<table class="table ">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
            <th>Department</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@(i++) -</td>
                <td>@project.Name</td>
                <td>@project.Location</td>
                <td>@project.DeptNum</td>
                <td><a asp-action="Detailes" asp-controller="Project" asp-route-id="@project.Number">Details</a></td>
                <td><a asp-action="Edit" asp-controller="Project" asp-route-id="@project.Number">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Project" asp-route-id="@project.Number">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
