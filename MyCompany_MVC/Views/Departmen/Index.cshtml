@{
    int i = 1;
}
@model List<Department>

@Html.ActionLink("Add department","Add","Departmen")

<table class="table ">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>location</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>
                    @foreach (var deptm in item.DepartmentLocations)
                    {

                        <span>[@deptm.Location] </span>


                    }
                </td>
                <td>@Html.ActionLink("Details","GetDepartmentById","Departmen",new {Id = item.Number})</td>
                <td>@Html.ActionLink("Edit","Edit","Departmen",new {Id = item.Number})</td>
                <td>@Html.ActionLink("Delete","Delete","Departmen",new {Id = item.Number})</td>
            </tr>
        }
    </tbody>
</table>
