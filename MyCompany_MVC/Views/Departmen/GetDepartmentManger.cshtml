@{
    int index = 1;
    int L_index = 1;
    

}
@model Department




<h1>Department Data:</h1>
<hr />
<br />
<h4>=> Name: @Model.Name</h4>
<h4>=> Locations:</h4>
<ol class="mx-5">
    @foreach (var deptLocation in Model.DepartmentLocations)
    {
        <li> @deptLocation.Location</li>

    }
</ol>
<br />
<h4>=> Projects:</h4>
<table class="table w-75 mx-5">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {

            <tr>
                <td>@(index++)</td>
                <td> @project.Name</td>
                <td>@project.Location</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary text-white  my-3 me-4"><h6 class="text-white"><a class="text-white" href="/WorksOnProject/AddEmployeesToProjects/@Model.Number">Assign Employees To Projects</a></h6> </button>
