@{

}
@model Department
<h2>Edit Department</h2>

@using (Html.BeginForm("EditDb", "Departmen", FormMethod.Post))
{
    <input name="Number" id="Number" hidden />
    @Html.LabelFor(d=>d.Name)
    @Html.TextBoxFor(d=> d.Name)
    <br />
    <br />
    @Html.LabelFor(d=>d.DepartmentLocations[0].Location)
    @Html.EditorFor(d=> d.DepartmentLocations[0].Location)
    <br />
    <br />
    @Html.LabelFor(d=>d.mngrSSN)
    @Html.DropDownListFor(d=>d.mngrSSN, ViewBag.emps as SelectList,"Choose Department Maneger")
    <br />
    <br />
    <input  type="submit" value="Edit" class="btn btn-primary"/> 
}