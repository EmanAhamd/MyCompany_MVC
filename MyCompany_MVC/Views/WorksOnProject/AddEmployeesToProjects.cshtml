@model List<Project>


<form action="/WorksOnProject/AddEmployeesToProjectsToDB">
    <label>Choose Project</label>
    <select class="form-select" id="projNum" name="Projects" multiple>

        <option value="">Choose Project</option>
        @foreach (var project in Model)
        {
            <option value="@project.Number">@project.Name</option>
        }

    </select>

    <label>Choose Employees</label>
    <select class="form-select" id="EmpSSN" name="Employees" multiple>
        <option value="">Choose Employees</option>
        @foreach (var employee in ViewBag.emps)
        {
            <option value="@employee.SSN">@(employee.Fname + " " + employee.Lname)</option>
        }
    </select>

   

    <input class="btn btn-primary mt-3" type="submit" value="Add" />
</form>