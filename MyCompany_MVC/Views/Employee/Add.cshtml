@{
}
@model List<Employee>

<h1>Add New Employee</h1>

<form action="/Employee/AddEmployeeDb">

    <label>First Name</label>
    <input class="form-control " id="Fname" name="Fname" type="text" />

    <label>Last Name</label>
    <input class="form-control" id="Lname" name="Lname" type="text" />

    <label>Minit</label>
    <input class="form-control " id="Minit" name="Minit" type="text" />

    <label>Sex</label>
    <br />
    <input id="Male" name="Sex" type="radio" value="Male" />
    <label for="Male">Male </label>
    <input id="Female" name="Sex" type="radio" value="Female" />
    <label for="Female"> Female</label>
    <br />
    <label>Address</label>
    <input class="form-control " id="Address" name="Address" type="text" />

    <label>Salary</label>
    <input class="form-control" id="Salary" name="Salary" type="number" />

    <label>Birth Date</label>
    <input class="form-control " id="BirthDate" name="BirthDate" type="datetime" />

    <label>Supervisor</label>
    <select class="form-select " id="SupervisorSSN" name="SupervisorSSN">
        <option value="">Choose Supervisor</option>
        @foreach (var employee in Model)
        {
            <option value="@employee.SSN">@(employee.Fname + " " + employee.Lname)</option>
        }
    </select>

    <input class="btn btn-primary mt-3" type="submit" value="Add" />
</form>