@{
}
@model Employee

<h1>Update Employee Data</h1>

<form action="/Employee/UpdateDB">

    <input id="SSN" name="SSN" type="text" value="@Model.SSN" hidden />

    <label>First Name</label>
    <input class="form-control" id="Fname" name="Fname" type="text" value="@Model.Fname" />

    <label>Last Name</label>
    <input class="form-control" id="Lname" name="Lname" type="text" value="@Model.Lname" />

    <label>Minit</label>
    <input class="form-control" id="Minit" name="Minit" type="text" value="@Model.Minit" />

    <label>Sex</label>
    <br />
    @{
        if (Model.Sex == "Male")
        {

            <input id="Male" name="Sex" type="radio" value="Male" checked />
            <label for="Male">Male</label>
            <input id="Female" name="Sex" type="radio" value="Female" />
            <label for="Female">Female</label>
        }
        else
        {
            <input id="Male" name="Sex" type="radio" value="Male" />
            <label for="Male">Male</label>

            <input id="Female" name="Sex" type="radio" value="Female" checked />
            <label for="Female">Female</label>
        }
    }
    <br />
    <label>Address</label>
    <input class="form-control" id="Address" name="Address" type="text" value="@Model.Address" />

    <label>Salary</label>
    <input class="form-control" id="Salary" name="Salary" type="number" value="@Model.Salary" />

    <label>Birth Date</label>
    <input class="form-control" id="BirthDate" name="BirthDate" type="datetime" value="@Model.BirthDate" />

    <label>Supervisor</label>
    <select class="form-select" id="SupervisorSSN" name="SupervisorSSN">
        <option value="">Choose instructor</option>
        @foreach (var emp in ViewBag.emp)
        {
            @if (emp.SSN == Model.SSN)
            {
                <option value="@emp.SSN" selected>@(emp.Fname + " " + emp.Lname)</option>
            }
            else
            {
                <option value="@emp.SSN">@(emp.Fname + " " + emp.Lname)</option>
            }


        }
    </select>

    <input class="btn btn-primary mt-3" type="submit" value="Update" />
</form>
