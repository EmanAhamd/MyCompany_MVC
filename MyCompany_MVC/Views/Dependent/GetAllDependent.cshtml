@{
    int index = 1;
}
@model List<Dependent>

<button class="btn btn-primary text-white  mb-5 me-4"><h6 class="text-white"><a class="text-white" href="/Dependent/Add">Add Dependent</a></h6> </button>
<button class="btn btn-primary text-white  mb-5"><h6 class="text-white"><a class="text-white" href="/Employee/Login">Back To Login</a></h6> </button>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Sex</th>
            <th>BirthDate</th>
            <th>Relationship</th>
            <th>Edit</th>
            <th>Delete</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var dependent in Model)
        {

            <tr>
                <td>@(index++)</td>
                <td>@dependent.Name</td>
                <td>@dependent.Sex</td>
                <td>@dependent.BirthDate</td>
                <td>@dependent.Relationship</td>
                <td><a href="/Dependent/Edit/@dependent.Name">[Edit]</a></td>
                <td><a href="/Dependent/Delete/@dependent.Name">[Delete]</a></td>

            </tr>
        }
    </tbody>

</table>

<h6>@TempData["AddMsg"]</h6>