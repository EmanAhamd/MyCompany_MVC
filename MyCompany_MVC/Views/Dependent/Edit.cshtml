@{
}
@model Dependent

<form action="/Dependent/EditToDB">

    <input class="form-control" id="Name" name="Name" type="text" value="@Model.Name" hidden />

    <label>Sex</label>
    <input class="form-control" id="Sex" name="Sex" type="text" value="@Model.Sex" />

    <label>Birth Date</label>
    <input class="form-control" id="BirthDate" name="BirthDate" type="datetime" value="@Model.BirthDate" />

    <label>Relationship</label>
    <input class="form-control" id="Relationship" name="Relationship" type="text" value="@Model.Relationship" />

    <input class="btn btn-primary mt-3" type="submit" value="Edit" />
</form>